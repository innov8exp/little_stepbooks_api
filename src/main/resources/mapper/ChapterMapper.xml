<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="co.botechservices.novlnovl.infrastructure.mapper.ChapterMapper">
    <select id="findChaptersInPaging" resultType="co.botechservices.novlnovl.domain.book.entity.ChapterEntity">
        SELECT * FROM NOVL_CHAPTER WHERE BOOK_ID = #{bookId}
    </select>
    <select id="findChapterCountByBooks"
            resultType="co.botechservices.novlnovl.domain.book.dto.ChapterCountDto">
        select c.BOOK_ID, count(1) as CHAPTER_COUNT from NOVL_CHAPTER c WHERE BOOK_ID in
        <foreach item="bookId" index="index" collection="bookIds" open="(" separator="," close=")">
            #{bookId}
        </foreach>
        group by c.BOOK_ID
    </select>
</mapper>