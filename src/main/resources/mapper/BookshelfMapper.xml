<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="co.botechservices.novlnovl.infrastructure.mapper.BookshelfMapper">
    <select id="findBooksInBookshelfByUser"
            resultType="co.botechservices.novlnovl.domain.book.entity.BookEntity">
        select b.* from novl_book b
        inner join NOVL_BOOKSHELF s
        on b.id = s.book_id
        where s.user_id = #{userId}
        order by s.sort_index asc
    </select>
</mapper>